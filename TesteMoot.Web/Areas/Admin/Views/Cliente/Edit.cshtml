@model Cliente
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Alterar Cliente</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Id" hidden />
            <input asp-for="ImageUrl" hidden />
            <div class="border p-3 mt-4">
                <div asp-validation-summary="ModelOnly"></div>
               <div class="form-floating py-2 col-12">
                    <input asp-for="Nome" class="form-control border-0 shadow" />
                    <label asp-for="Nome" class="ms-2"></label>
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Email" class="form-control border-0 shadow" />
                    <label asp-for="Email" class="ms-2"></label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input type="file" name="file" class="form-control border-0 shadow" />
                    <label asp-for="ImageUrl" class="ms-2"></label>
                </div>
                <div class="col-2">
                    <img src="@Model.ImageUrl" width="100%"
                         style="border-radius:5px; border:1px solid #bbb9b9" />
                </div>
                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Alterar</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Cliente" asp-action="Index" class="btn btn-secondary border  form-control">
                            Lista de Cliente
                        </a>
                    </div>
                </div>


    </div>
        </form>
    </div> 
</div>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}