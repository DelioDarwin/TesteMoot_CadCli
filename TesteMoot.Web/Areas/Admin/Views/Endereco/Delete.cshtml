@model Endereco
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
    <div class="row">
        <div class="col-12 text-center">
                <h2 class="text-white py-2">Excluir Endereco</h2>
        </div>
    </div>
    </div>
     <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="border p-3 mt-4">
                <div class="form-floating py-2 col-12">
                    <input asp-for="Logradouro" class="form-control border-0 shadow" />
                    <label asp-for="Logradouro" class="ms-2"></label>
                    <span asp-validation-for="Logradouro" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Numero" class="form-control border-0 shadow" />
                    <label asp-for="Numero" class="ms-2"></label>
                    <span asp-validation-for="Numero" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Complemento" class="form-control border-0 shadow" />
                    <label asp-for="Complemento" class="ms-2"></label>
                    <span asp-validation-for="Complemento" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Bairro" class="form-control border-0 shadow" />
                    <label asp-for="Bairro" class="ms-2"></label>
                    <span asp-validation-for="Bairro" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Cidade" class="form-control border-0 shadow" />
                    <label asp-for="Cidade" class="ms-2"></label>
                    <span asp-validation-for="Cidade" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Estado" class="form-control border-0 shadow" />
                    <label asp-for="Estado" class="ms-2"></label>
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Pais" class="form-control border-0 shadow" />
                    <label asp-for="Pais" class="ms-2"></label>
                    <span asp-validation-for="Pais" class="text-danger"></span>
                </div>

                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Excluir</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Endereco" asp-action="Index" class="btn btn-secondary border  form-control">
                            Lista de Endereços
                        </a>
                    </div>
                </div>


            </div>
        </form>
    </div> 
</div>



